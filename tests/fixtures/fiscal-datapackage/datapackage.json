{
  "name": "my-openspending-datapackage",
  "title": "My OpenSpending Data Package",
  "profile": "fiscal-data-package",
  "resources": [
    {
      "name": "budget",
      "title": "Budget",
      "profile": "data-resource",
      "path": ["budget.csv"],
      "schema": {
        "fields": [
          {
            "name": "id",
            "type": "string"
          },
          {
            "name": "amount",
            "type": "number"
          },
          {
            "name": "date",
            "type": "date"
          },
          {
            "name": "payee",
            "type": "string"
          }
        ],
        "primaryKey": ["id"]
      },
      "foreignKeys": [
        {
          "fields": "payee",
          "reference": {
            "datapackage": "my-openspending-datapackage",
            "resource": "entities",
            "fields": "id"
          }
        }
      ]
    },
    {
      "name": "entities",
      "title": "Entities",
      "profile": "data-resource",
      "path": ["entities.csv"],
      "schema": {
        "fields": [
          {
            "name": "id",
            "type": "string"
          },
          {
            "name": "title",
            "type": "string"
          },
          {
            "name": "description",
            "type": "string"
          }
        ],
        "primaryKey": ["id"]
      }
    }
  ],
  "model": {
    "measures": {
      "amount": {
        "source": "budget",
        "currency": "USD",
        "factor": 1
      }
    },
    "dimensions": {
      "date": {
        "dimensionType": "datetime",
        "attributes": {
          "year": {
            "source": "year"
          }
        },
        "primaryKey": "year"
      },
      "payee": {
        "dimensionType": "entity",
        "attributes": {
          "id": {
            "resource": "entities",
            "source": "id"
          },
          "title": {
            "resource": "entities",
            "source": "title"
          },
          "description": {
            "resource": "entities",
            "source": "description"
          }
        },
        "primaryKey": ["id"]
      }
    }
  }
}